---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import LinkedinIcon from "../components/Icons/LinkedinIcon.astro";
import Githubicon from "../components/Icons/GithubIcon.astro"
import SocialPills from "../components/SocialPills.astro";
import EmailIcon from "../components/Icons/EmailIcon.astro";
---

<Layout title="Welcome to Astro.">
	<main>
		<section class="w-full mx-auto lg:w-[740px] py-44">
			<h1
				class="text-white text-4xl font-bold flex flex-row gap-x-4 pb-10"
			>
				¡Hola! Soy Nicolás Diez. <a
					href="https://www.linkedin.com/in/nicolas-diez-8421a3282/"
					target="_blank"
					rel="noopener"
					class="flex justify-end items-center pb-1 hover:scale-110 transition"
				>
					<Badge>Disponible para trabajar</Badge>
				</a>
			</h1>
			<h2 class="text-white text-2xl opacity-80">
				<span class="text-yellow-100/90"> Desarrollador Web.</span>
				<span class="text-red-200/90">Desde Córdoba Argentina,</span>
				<span class="opacity-80"> creando aplicaciones únicas.</span>
			</h2>
			<nav class="flex gap-x-4 mt-4">
				<SocialPills href="https://www.linkedin.com/in/nicolas-diez-8421a3282/">
					<LinkedinIcon class="w-6 h-6" />Linkedin
				</SocialPills>
				<SocialPills  href="https://github.com/NicolasSDiez">
					<Githubicon class="w-6 h-6" />GitHub
				</SocialPills>
				<SocialPills  href="mailto:nicolas.diez1s@gmail.com">
					<EmailIcon class="w-6 h-6" />nicolas.diez1s@gmail.com
				</SocialPills>
			</nav>
		</section>
	</main>
</Layout>
